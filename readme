인지적 편향: Functional Fixedness & Satisficing
cognitive_biases = {
    "functional_fixedness": {
        "정의": "첫 번째 해결책에 고착되는 현상",
        "예시": "망치를 보면 못 박는 용도로만 생각"
    },
    "satisficing": {
        "정의": "충분히 좋으면 만족하는 경향",
        "허버트_사이먼": "'Good enough'에서 멈추는 인간의 특성"
    },
    "einstellung_effect": {
        "정의": "익숙한 방법에만 의존하는 현상",
        "결과": "더 나은 해결책을 놓치게 됨"
    }
}
